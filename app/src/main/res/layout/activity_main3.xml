<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/edit_text_round"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="@string/email2"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/edit_text_round"
        android:drawableLeft="@drawable/baseline_abc_24"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="password"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:drawableRight="@drawable/signin"
        android:backgroundTint="@color/button_pressed"
        android:onClick="signIn"
        style="@style/GameMenuButton"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:text="QUIZ SHOWDOWN"
        android:textColor="#D4AF37"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>