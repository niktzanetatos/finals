<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:startColor="#D32F2F" android:endColor="#B71C1C" android:angle="270"/>
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient android:startColor="#FF5722" android:endColor="#E64A19" android:angle="270"/>
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
            <shadowColor android:color="#99000000" />
        </shape>
    </item>
</selector>